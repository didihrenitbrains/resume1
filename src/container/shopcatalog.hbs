<main  class="p-3 row">


        <div class="mb-4">
            {{#with navigation}}
            <div class="nav"> 
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>

        <div class="mb-2">
            
            <ol class="breadcrumb">
                {{#each breadcrumb}}
                <li class="breadcrumb-item">
                    <a class="{{#unless url}}disabled{{/unless}}" href="{{url}}">{{name}}</a>
                </li>
                {{/each}}
            </ol>
            
        </div>

        <h3>{{header}}</h3>
        <div style="display: flex;" class="mt-3 mb-4">
            {{#each sortBlock}}
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            {{/each}}

        </div>

        <div class="col-4">
            {{#with filterBlock}}
                <div class="card mb-5">
                    <div class="card-body">
                        {{#with sellers}}
                            <div>{{title}}</div>
                            {{#each list}}
                            <div class="form-check">
                                
                                <label class="form-check-label">{{value}}</label>
                                <input type="checkbox" class="form-check-input">
                                
                            </div>
                            {{/each}}
                        {{/with}}
                        <hr>

                        {{#with brands}}
                            <div class="mb-2">{{title}}</div>
                            {{#with input}}
                                <input  value="{{placeholder}}" class="form-control text-secondary mb-3">
                            {{/with}}
                            <div>
                                {{#each options}}
                                <div class="form-check">
                                
                                <label class="form-check-label">{{value}}</label>
                                <input type="radio" class="form-check-input">
                                
                                </div>
                                {{/each}}
                            </div>
                            

                        {{/with}}
                        <hr>

                        <div class="mb-2">
                            {{#with price}}
                            <div class="mb-2">{{title}}</div>
                                {{#with range}}
                                <input  value="{{from}}" class="form-control text-secondary mb-3">
                                <input  value="{{to}}" class="form-control text-secondary mb-3">
                                {{/with}}
                                {{#with button}}
                                <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
                                {{/with}}
                            {{/with}}
                        </div>
                        <hr>

                        <div class="mb-2">
                            {{#each filterList}}
                            <div class="mb-2">{{title}}</div>

                            {{#each options}}
                                <div class="form-check">
                                
                                <label class="form-check-label">{{value}}</label>
                                <input type="checkbox" class="form-check-input">
                                
                                </div>
                                
                            {{/each}}
                            <hr>
                            {{/each}}
                        </div>
                    </div>
                </div>
                
            {{/with}}
        </div>

        <div class=" row col-8 mb-5">
            {{#each goodsList}}
            <div class="card col-5 m-1">
                
                <div class="card-body">
                    <img class="card-img-top mb-3" src="{{img}}" >

                    {{#if isHot}}
                    <div class="badge rounded-pill text-bg-warning ">HOT!</div>
                    {{/if}}
                    {{#if isNew}}
                    <div class="badge rounded-pill text-bg-primary">Нове</div>
                    {{/if}}
                    {{#if isFast}}
                    <div class="badge text-bg-success mb-2">Швидка доставка</div>
                    {{/if}}
                    {{#if isFree}}
                    <div class="badge text-bg-secondary mb-2">Безкоштовна доставка</div>
                    {{/if}}
                    
                    <div style="font-weight: 600;">{{title}}</div>
                    {{#with review}}
                        <div class="mb-2">{{amount}} {{text}}</div>
                        
                    {{/with}}
                    <div class="mb-2" style="text-transform: uppercase;">{{text}}</div>
                    <div class="mb-2">{{delivery}}</div>

                    {{#each buttons}}
                        {{#if isPrimary}}
                        <a class="btn btn-primary text-light mb-3" href="{{link}}">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a class="btn btn-secondary text-light mb-3" href="{{link}}">{{text}}</a>
                        {{/if}}

                    {{/each}}

                    {{#each characteristics}}
                    <ul>
                        <li>{{title}}: {{value}}</li>
                    </ul>
                    {{/each}}
                </div>
            </div>

            
            {{/each}}
        </div>


        <div>
            <div class="card text-bg-success mt-6 mb-4">
            {{#with service}}
            <div style="text-align: center;" class="card-body">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <a class="btn btn-primary text-light" href="{{link}}">{{text}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>

        <div class="nav">
        {{#each footer}}
        <div class="nav-item">
          {{#each this}}
          <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
          {{/each}}
        </div>
        {{/each}}
        </div>
        </div>
</main>