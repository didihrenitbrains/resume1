<main class="p-3">
     <div class="row">
        <div>
            {{#with navigation}}
            <div class="nav"> 
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>
        
        <hr>
        
        <section class="row">
            {{#with formBlock}}
            <div class="col-8">
                
                <h2>{{header}}</h2>
                    {{#with rating}}
                    <div>
                        {{title}}:{{value}}
                    </div>
                    {{/with}}

                    {{#with actionBlock}}
                        <div class="nav nav-tabs">
                            {{#each tabs}}
                            <div class="nav-item">
                                <a class="nav-link {{#if isActive}}active{{/if}}" href="#">{{text}}</a>
                            </div>
                            {{/each}}
                        </div>
                        <br>
                        <hr>
                        <br>
                        
                        {{#with report}}
                        <div class="card">
                            <div class="card-body">
                                <div class="card-title">{{title}}</div>
                                {{#with button}}
                                <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                    {{/with}}

                    <br>
                    <hr>
                    <br>
                    {{#with feedbackBlock}}
                    <div>
                        <h3>{{title}}</h3>
                        <br>
                        <div>
                            {{#each buttons}}
                            {{#if isWarning}}
                            <a class="btn btn-warning text-light" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{#if isSuccess}}
                            <a class="btn btn-success text-light" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a class="btn btn-danger text-light" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    

                    {{/with}}
            </div>

                {{#with goodsInfo}}
                <div class="col-4">
                    <div class="card mb-2">
                    <div class="card-body">
                        <img src="{{photo}}">
                        <div style="font-weight: bold;">{{name}}</div>
                    </div> 
                    </div>
                    <div class="card ">
                        <div class="card-body">
                            <div style="text-transform: uppercase; font-weight:bold">{{price}}</div>
                            {{#if inMarket}}
                            <div>Є в наявності</div>
                            {{/if}}

                            {{#each buttons}}
                            {{#if isPrimary}}
                            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                            {{/if}}
                            <br>
                            {{#if isSecondary}}
                            <a class="btn btn-secondary" href="{{link}}">{{text}}</a>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="card">
                        {{#with seller}}
                        <div class="card-body">
                            <div>{{title}}: <span style="font-weight: 700;">{{value}}</span></div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                
                {{/with}}
            
            {{/with}}
        </section>
        <br>
        <hr>
        <br>
        <section>
            <div class="card">
                {{#each reviewList}}
                <div class="card-body">
                        <div class="card">
                            <div class="card-body">
                                {{#with title}}
                                    <div style="font-weight: 700;">{{userName}}</div>
                                    <div>{{caption}}</div>
                                    <div>{{date}}</div>
                                {{/with}}
                                <hr>
                                <div>
                                    {{#with reviewBody}}
                                        {{#with seller}}
                                            <div class="mb-3">{{title}}: {{value}}</div>
                                        {{/with}}

                                        {{#with rating}}
                                            <div class="mb-3">{{title}}: {{value}}</div>
                                        {{/with}}

                                        
                                            {{#each text}}
                                            <div class="mb-3">{{this}}</div>
                                            {{/each}}
                                        
                                        {{#with advantages}}
                                        <div style="font-weight:700">{{title}}:</div>
                                        <div class="mb-3">{{text}}</div>
                                        {{/with}}

                                        {{#each images}}
                                            <img src="{{this}}" alt="">
                                        {{/each}}
                                    
                                </div>

                                
                            </div>
                            
                            
                        </div>
                    
                    <section>
                        {{#each coments}}
                        <div class="card">
                            <div class="card-body">
                                
                                <div class="mb-2" style="font-weight: 500;">{{userName}}</div>
                                <div class="mb-2">{{date}}</div>
                                <div>{{text}}</div>
                            
                            </div>
                        </div>
                        {{/each}}
                            
                    </section>
                    {{/with}}
                </div>
                {{/each}}
            </div>
        </section>

        <div class="card text-bg-success mb-4">
            {{#with service}}
            <div style="text-align: center;" class="card-body">
                <h2>{{title}}</h2>
                <p>{{description}}</p>
                {{#each buttons}}
                <a class="btn btn-primary text-light" href="{{link}}">{{text}}</a>
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>

        <div class="nav">
        {{#each footer}}
        <div class="nav-item">
          {{#each this}}
          <a class="nav-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
          {{/each}}
        </div>
        {{/each}}
      </div>
</main>