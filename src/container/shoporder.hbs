<main class="p-3">
    <div class="row">
        <div>
            {{#with navigation}}
            <div class="nav"> 
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
                </div>
                {{/each}}
            </div>
            {{/with}}
        </div>


        <hr>
    <br>
     <div>
        <h1>{{header}}</h1>
     </div>
     <br>
     <br>

        {{#with contacts_data}}
        <h3>{{title}}</h3>

        <div class="col-8">
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-warning text-light" >{{text}}</button>
            {{/if}}
            {{#if isOutline}}
            <button class="btn btn-outline-warning ">{{text}}</button>
            {{/if}}
            {{/each}}
            <div>
                {{#with form}}
                {{#with input}}
                {{#with surname}}
                <label class="form-label">{{label}}</label>
                <input value="{{placeholder}}" class="form-control text-secondary">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{#with name}}
                <label class="form-label">{{label}}</label>
                <input value="{{placeholder}}" class="form-control text-secondary">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{#with phone}}
                <label class="form-label">{{label}}</label>
                <input value="{{placeholder}}" class="form-control text-secondary">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{#with email}}
                <label class="form-label">{{label}}</label>
                <input value="{{placeholder}}" class="form-control text-secondary">
                <div class="form-text">{{caption}}</div>
                {{/with}}
                {{/with}}
                {{/with}}
            </div>
            <br>
        <hr>


        <div >
            <div class="form-check form-switch">
                <label class="form-check-label">Отримувати інформацію про новинки</label>
                <input type="checkbox" class="form-check-input">
            </div>

            <div class="form-check form-switch">
                <label class="form-check-label">Отримувати інформацію про знижки</label>
                <input type="checkbox" class="form-check-input">
            </div>
            
            <br>
            <hr> 
        </div>

        </div>
    {{/with}}


        <div class="col-4">
            <div class="card">
                <div class="card-body">
                    {{#each action_block}}
                    <div class="mb-1">
                        {{#if isSuccess}}
                            <button class="btn btn-success text-light" >{{text}}</button>
                        {{/if}}
                    </div>
                    <div>
                        {{#if isDanger}}
                            <button class="btn btn-danger text-light" >{{text}}</button>
                        {{/if}}
                    </div>
                    <div>
                        {{#if isInfo}}
                            <button class="btn btn-info text-light" >{{text}}</button>
                        {{/if}}
                    </div>
                        
                    {{/each}} 
                </div>
            </div>
            {{#with total}}
            <div class="card">
                <div class="card-body">
                    <h3>{{title}}</h3>
                    {{#each item_list}}
                    <div>{{name}}: {{price}}</div >
                    {{/each}}
                    <hr>

                    {{#each additional_info}}
                    <div>{{text}}: {{value}}</div>
                    {{/each}}
                    <hr>

                    {{#with total_price}}
                    <div>{{text}}: {{value}}</div>
                    {{/with}}
                    <hr>
                    {{#each button}}
                    <div class="mb-2">
                        {{#if isPrimary}}
                        <button class="btn btn-primary text-light">{{text}}</button>
                        {{/if}}
                    </div>
                    <div>
                        {{#if isOutline}}
                        <button class="btn btn-outline-primary">{{text}}</button>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>
        <div class="col-8">
                {{#with delivery}}
                <h2>{{title}}</h2>
                {{#each select}}
                <label class="form-label">{{label}}</label>
                <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text }}</option>
                    {{/each}}
                </select>
                {{/each}}
                <br>
                {{#each delivery_type}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input name="delivery" type="radio" class="form-check-input"> 
                </div>
                {{/each}}
                <br>
                <hr>
                <br>
                <div>
                    {{#with payment}}
                    <h3>{{title}}</h3>

                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input name="payment" type="radio" class="form-check-input">
                        <div class="form-text">{{description}}</div>
                    </div>
                    {{/each}}
                    {{/with}}
                    <br>
                </div>
                <hr>
                <br>
                <div>
                    {{#with contact}}
                    <h3>{{title}}</h3>
                    {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control text-secondary">
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control text-secondary">
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control text-secondary">
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    {{#with email}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control text-secondary">
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    {{/with}}
                </div> 
                 <br>
                 <hr>
                 <div>
                    {{#with coment}}
                    <label class="form-label">{{label}}</label>
                    <input value="{{placeholder}}" class="form-control text-secondary">
                    {{/with}}
                </div>
                <br>
                <hr>
            {{/with}}
            
            <div>
                {{#with coupon}}
                <h3>{{title}}</h3>

                {{#with select}}
                    {{#with availabel_coupon}}
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text }}</option>
                    {{/each}}
                    {{/with}}

                    <div>
                    {{#with friend_coupon}}
                    <label class="form-label">{{label}}</label>
                    <select class="form-select">
                    <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text }}</option>
                        {{/each}}
                    {{/with}}
                    </div>
                {{/with}}

                <div>
                    {{#with add}}
                        {{#with friend}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control form-control-lg text-secondary">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                        {{#with colleague}}
                        <label class="form-label">{{label}}</label>
                        <input value="{{placeholder}}" class="form-control form-control-sm text-secondary">
                        <div class="form-text">{{caption}}</div>
                        {{/with}}
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <br>
            <hr>

            <div>
                {{#with quiz}}
                <h3>{{title}}</h3>

                {{#with preference}}
                    <div>{{title}}</div>
                    {{#each options}}
                    <div class="form-check">
                        <label class="form-check-label">{{this}}</label>
                        <input name="options" type="radio" class="form-check-input">
                    </div>
                    {{/each}}
                {{/with}}
                <br>
                <div>
                    {{#with your_expirience}}
                    <label class="form-label">{{label}}</label>
                    <input class="form-control text-secondary">
                    {{/with}}
                
                </div>
                <div>
                    {{#with purchase_frequency}}
                    <label class="form-check-label">{{label}}</label>
                    <select class="form-select">
                    <option selected>{{placeholder}}</option>
                        {{#each options}}
                        <option value="{{value}}">{{text }}</option>
                        {{/each}}
                    {{/with}}
                </div>
                <div>
                    {{#with factors}}
                    <div>{{title}}</div>
                    
                    {{#each options}}
                    <div class="form-check">
                        <label class="form-check-label">{{this}}</label>
                        <input name="options" type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                </div>

                {{/with}}
            </div>
            <br>
            <br>
            <hr>
            <div>
                
                
                
            </div>

        </div>
        <div class="nav">
                    {{#each footer}}
                    <div class="nav-item">
                        {{#each this}}
                        <a class="nav-link" {{#if @last}}disabled{{/if}} href="{{link}}">{{text}}</a>
                        {{/each}}
                    </div>
                    {{/each}}
        </div>
    </div>
   
    
    </div>

    
    
      
</main>